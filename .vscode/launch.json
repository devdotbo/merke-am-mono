{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Next.js: dev (apps/app)",
      "cwd": "${workspaceFolder}",
      "command": "pnpm -C apps/app dev",
      "env": {
        "PORT": "3002"
      }
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Convex: dev (apps/app)",
      "cwd": "${workspaceFolder}",
      "command": "pnpm -C apps/app convex:dev"
    }
  ],
  "compounds": [
    {
      "name": "Dev: Next + Convex (apps/app)",
      "configurations": [
        "Next.js: dev (apps/app)",
        "Convex: dev (apps/app)"
      ],
      "stopAll": true
    }
  ]
}


